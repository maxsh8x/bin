extends layout

block content
    include navbar
    #create-widget-modal.modal.fade
        .modal-dialog
            .modal-content: form#create-widget
                .modal-header
                    h4.modal-title Create widget
                .modal-body
                    .form-group
                        label(for="#city") City name:
                        select#city.form-control(name="city")
                            option St Petersburg
                            option Moscow
                            option Nizhny Novgorod
                    .form-group
                        label(for="#days") Days:
                        input#days.form-control(type="number" value="1" min="1" max="7" name="days")
                    .form-group
                        label(for="#orientation") Orientation:
                        select#orientation.form-control(name="orientation")
                            option horizontal
                            option vertical
                .modal-footer
                    button.btn.btn-secondary(data-dismiss="modal") Close
                    button.btn.btn-primary(type="submit") Create
    #embed-code-modal.modal.fade
        .modal-dialog
            .modal-content
                .modal-body
                    .form-group
                        label(for="embed-code") Embed code:
                        textarea.form-control(rows="10" id="embed-code")                
    table#widget-list.table.table-hover
        thead: tr
            th ID
            th City
            th Days
            th Orientation
        tbody

block extraScripts
    script(src='/js/user_widgets.js')